{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "LanguageProject": "Data Source=.;Initial Catalog=LanguageProject;Integrated Security=true;Encrypt=true;TrustServerCertificate=true;MultipleActiveResultSets=true"
  }
  //Integrated Security=true啟用 Windows 身分驗證
  //Encrypt=true表示是否加密傳輸中的資料
  //TrustServerCertificate=true此選項表示是否信任伺服器的自簽名憑證
  //MultipleActiveResultSets=true允許在同一資料庫連線上執行多個查詢，適用於多執行緒操作
}
