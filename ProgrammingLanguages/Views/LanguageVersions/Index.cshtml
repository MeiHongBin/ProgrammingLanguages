@model IEnumerable<ProgrammingLanguages.ProgrammingLanguageModels.LanguageVersion>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VersionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Changes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lv1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lv2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lv3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Language)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VersionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Changes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lv1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lv2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lv3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language.LanguageId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VersionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VersionId">Details</a> |
